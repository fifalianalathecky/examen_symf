{% extends 'base.html.twig' %}

{% block title %}Modifier la réservation{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-pencil-square"></i> Modifier la réservation</h1>
            <div class="btn-group">
                <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-eye"></i> Voir les détails
                </a>
                <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                {{ include('reservation/_form.html.twig', {
                    'button_label': 'Mettre à jour',
                    'include_delete_form': true
                }) }}
            </div>
        </div>
    </div>
{% endblock %}
