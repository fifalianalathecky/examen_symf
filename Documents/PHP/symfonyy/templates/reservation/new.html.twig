{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-plus-circle"></i> Nouvelle réservation</h1>
            <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                {{ include('reservation/_form.html.twig', {
                    'button_label': 'Créer la réservation'
                }) }}
            </div>
        </div>
    </div>

    <style>
        .card {
            border: none;
            border-radius: 0.5rem;
        }
    </style>
{% endblock %}
